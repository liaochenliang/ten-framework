import("//build/ten_utils/utils.gni")

ten_utils_glob("general") {
  deps = [
    "//core/src/ten_utils/value",
    "//third_party/yyjson",
  ]

  if (is_win && !is_mingw) {
    # MSVC uses bcrypt.lib
    libs = [ "bcrypt.lib" ]
  } else if (is_win && is_mingw) {
    # MinGW uses bcrypt (without .lib extension)
    libs = [ "bcrypt" ]
  } else if (is_mac) {
    frameworks = [ "Security.framework" ]
  }
}
